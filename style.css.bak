:root{
  --primary:#d94a31;
  --accent:#0b3d91;
  --warm:#ff9a3c;
  --bg:#fbfaf8;
  --card:#ffffff;
  --muted:#68707a;
  --glass: rgba(255,255,255,0.7);
  --radius:12px;
}

*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
  background:var(--bg);
  color:#111;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
  line-height:1.6;
}

.container{width:92%;max-width:1200px;margin:0 auto;padding:1.25rem 0}

/* NAVBAR */
.navbar{position:sticky;top:0;background:rgba(255,255,255,0.9);backdrop-filter:blur(6px);z-index:10;border-bottom:1px solid rgba(0,0,0,0.04)}
.navinner{display:flex;align-items:center;justify-content:space-between;padding:.7rem 0}
.brand{font-weight:800;color:var(--primary);text-decoration:none;font-size:1.1rem}
.nav-links{display:flex;gap:1rem;list-style:none;margin:0;padding:0}
.nav-links a{display:inline-block;padding:.5rem .6rem;color:var(--muted);text-decoration:none;border-radius:8px;font-weight:600}
.nav-links a:hover,.nav-links a:focus{color:var(--primary);background:linear-gradient(90deg,rgba(217,74,49,0.06),transparent)}
.hamburger{display:none;background:none;border:0;font-size:1.4rem;padding:.4rem;border-radius:8px}

/* HERO */
.hero{position:relative;min-height:70vh;display:flex;align-items:center;color:#fff;padding:4rem 0;background-image:linear-gradient(180deg,rgba(0,0,0,0.25),rgba(0,0,0,0.35)),url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?q=80&w=1400&auto=format&fit=crop');background-size:cover;background-position:center}
.hero .overlay{position:absolute;inset:0;background:linear-gradient(180deg,rgba(9,25,60,0.12),rgba(9,25,60,0.25));mix-blend-mode:multiply}
.hero-inner{position:relative;display:grid;grid-template-columns:1fr 420px;gap:2rem;align-items:center}
.hero-text .title{font-family:'Playfair Display',serif;font-size:2.2rem;margin:0 0 .6rem;color:#fff}
.hero-text .subtitle{color:rgba(255,255,255,0.92);margin-bottom:1rem}
.hero-image{height:320px;border-radius:12px;background:url('./image/pic1.jpg') center/cover no-repeat;box-shadow:0 12px 30px rgba(0,0,0,0.35); position: relative; overflow: hidden;}
.hero-cta{display:flex;gap:.8rem}
.btn{display:inline-block;padding:.6rem 1rem;border-radius:8px;text-decoration:none;font-weight:700}
.btn.primary{background:var(--primary);color:#fff}
.btn.outline{background:transparent;border:2px solid rgba(255,255,255,0.18);color:#fff}

/* SECTIONS */
.section{padding:3.25rem 0}
.section h2{color:var(--primary);text-align:center;margin-bottom:1rem;font-size:1.6rem}
.grid-2{display:grid;grid-template-columns:1fr 320px;gap:2rem;align-items:start}
.about-content p{color:var(--muted);margin-bottom:.8rem}
.team-photos{display:flex;gap:.6rem;margin-top:1rem}
.team-photos img{width:48%;border-radius:10px;display:block}
.about-stats .card{background:var(--card);padding:1rem;border-radius:10px;box-shadow:0 8px 20px rgba(11,61,145,0.04);text-align:center;margin-bottom:.8rem}
.about-stats h3{color:var(--accent);margin:0}

/* PROGRAMS */
.program-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:1rem}
.program{background:var(--card);padding:1rem;border-radius:12px;box-shadow:0 8px 20px rgba(0,0,0,0.06);transition:transform .25s ease,box-shadow .25s}
.program:hover{transform:translateY(-6px);box-shadow:0 18px 40px rgba(0,0,0,0.08)}
.program h3{color:var(--accent);margin-bottom:.35rem}
.program .muted{color:var(--muted);font-size:.92rem}
.btn.small{padding:.45rem .8rem;font-size:.9rem}

/* SIELE / SERVICES */
.services-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:1rem}
.service{background:var(--card);padding:1rem;border-radius:12px}
.testimonials{margin-top:1.25rem}
.test-slider{position:relative;overflow:hidden;padding:1rem;background:linear-gradient(180deg,rgba(255,255,255,0.85),#fff);border-radius:12px}
.test{display:none;font-style:italic;color:var(--muted)}
.test.active{display:block}

/* GALLERY */
.gallery-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:8px}
.gallery-grid img{width:100%;height:160px;object-fit:cover;border-radius:8px}

/* POSTS */
.posts-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:1rem}
.post{background:var(--card);border-radius:10px;overflow:hidden}
.post img{width:100%;height:140px;object-fit:cover}
.post h4{padding:.6rem .8rem;margin:0}
.post .muted{padding:.2rem .8rem;color:var(--muted)}
.post .link{display:inline-block;padding:.6rem .8rem;color:var(--primary);text-decoration:none}

/* CONTACT */
.contact-form{display:flex;flex-direction:column;gap:.6rem}
.contact-form input,.contact-form textarea{padding:.6rem;border-radius:8px;border:1px solid #e6e6e6}
.form-actions{display:flex;gap:.6rem;align-items:center}
.map-wrap iframe{width:100%;height:220px;border:0;border-radius:10px}
.form-msg{color:var(--accent);margin-top:.5rem}

/* FOOTER */
.footer{background:#0b1b3b;color:#fff;padding:1rem 0}
.footer-inner{display:flex;justify-content:space-between;gap:1rem;align-items:center}

/* MODAL */
.modal{position:fixed;inset:0;display:none;align-items:center;justify-content:center;background:rgba(2,6,23,0.5);z-index:2000}
.modal[aria-hidden="false"]{display:flex}
.modal-dialog{background:var(--card);padding:1.25rem;border-radius:12px;max-width:520px;width:92%;position:relative}
.modal-close{position:absolute;right:12px;top:12px;border:0;background:none;font-size:1.4rem}

/* small helpers */
.sr-only{position:absolute!important;left:-9999px!important}
.muted{color:var(--muted)}

/* Animations */
.fade-up{opacity:0;transform:translateY(10px);transition:opacity .6s ease,transform .6s ease}
.fade-up.in-view{opacity:1;transform:none}

.hero-image::before {
  content: '';
  position: absolute;
  inset: 0;
  background: inherit;
  background-size: cover;
  animation: kenburns 20s ease-out infinite;
}

@keyframes kenburns {
  0% { transform: scale(1) translate(0, 0); transform-origin: 50% 50%; }
  25% { transform: scale(1.1) translate(-2%, 2%); transform-origin: 50% 50%; }
  50% { transform: scale(1) translate(0, 0); transform-origin: 20% 80%; }
  75% { transform: scale(1.1) translate(2%, -2%); transform-origin: 80% 20%; }
  100% { transform: scale(1) translate(0, 0); transform-origin: 50% 50%; }
}

/* Responsive */
@media (max-width:1000px){.hero-inner{grid-template-columns:1fr}}
@media (max-width:800px){
  .grid-2{grid-template-columns:1fr}
  .gallery-grid{grid-template-columns:repeat(2,1fr)}
}
@media (max-width:640px){
  .nav-links{display:none;position:fixed;inset:56px 0 0 0;background:var(--card);flex-direction:column;padding:1rem;z-index:1500}
  .nav-links.show{display:flex}
  .hamburger{display:block}
  .gallery-grid{grid-template-columns:1fr}
  .hero{padding:2rem 0}
  .hero-image{display:none}

}
.whatsapp-float {
  position: fixed;
  width: 60px;
  height: 60px;
  bottom: 40px;
  right: 20px;
  background: #25D366;
  color: #FFF;
  border-radius: 50px;
  text-align: center;
  font-size: 30px;
  box-shadow: 0 0 20px rgba(37, 211, 102, 0.6);
  z-index: 100;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse 2s infinite;
}